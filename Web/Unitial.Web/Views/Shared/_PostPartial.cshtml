<!-- Start Post Fragment -->
<div class="container" style="margin-left:25px" >
    <div class="row">

        <div class="col-lg-6 offset-lg-3" >

            <div class="cardbox shadow-lg bg-white" style="height:auto">

                <div class="cardbox-heading">

                    <div class="media m-3 pt-3">
                        <div class="d-flex mr-0">
                            <a href="/User/Profile?uesrId=@Model.UserId">
                                <img class="img-fluid rounded-circle" src="@Model.UserImageUrl" alt="User">
                            </a>
                        </div>
                        <div class="media-body">
                            <a href="/User/Profile?uesrId=@Model.UserId">
                                <p class="m-0">@Model.UserFullName</p>
                            </a>
                            
                            <small>
                                <span>
                                    <i class="icon ion-md-time"></i> @Model.PostedOn.ToString("dd/MM/yyyy")
                                </span>
                            </small>
                        </div>
                    </div>
                    <!--/ media -->
                </div>
                <!--/ cardbox-heading -->

                <div class="cardbox-item">
                    <img class="img-fluid" src="@Model.PostImageUrl" alt="Image">
                </div>
                <!--/ cardbox-item -->
                <div class="cardbox-base">
                    <ul class="float-right">
                    </ul>
                    <ul class="float-left">
                        <li><a><i class="fa fa-thumbs-up"></i></a></li>
                        <li><a><span>@Model.Likes Likes</span></a></li>
                    </ul>
                </div>
                <!--/ cardbox-base -->

                <div class="cardbox-comments">
                    <span class="comment-avatar float-left">
                        <a href="">
                            <img class="rounded-circle" src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/6.jpg">
                        </a>
                    </span>
                    <div class="search">
                        <input placeholder="Write a comment" type="text">
                        <!-- <button><i class="fa fa-camera"></i></button> -->
                    </div>

                    <!--/. Search -->
                </div>
                <!--/ cardbox-like -->
            </div>
            <!--/ cardbox -->

        </div>
    </div>
    <!--/ row -->
</div>
<!--/ container -->
<!-- End Post Fragment -->