<div style="display:flex;justify-content:center;align-items:center;">
    <div class="accordionWrapper">
        <div class="accordionItem close">
            <h2 class="accordionItemHeading"> Create New Post.</h2>
            <div class="accordionItemContent">
                <form method="post" asp-action="CreatePost" asp-controller="Post" enctype="multipart/form-data">

                    <div class="form-group">
                        <textarea style="font-size:16px" class="form-control" placeholder="Post Caption" name="caption" rows="2" pattern="^.{1,65}$" ></textarea>
                    </div>

                    <div class="form-group custom-file">

                        <input type="file" class=" form-control custom-file-input " style="font-size:16px" name="UploadImage" id="file-upload" accept="image/*" required>
                        <label class="form-control custom-file-label" style="font-size:16px" for="customFile">Upload Image</label>
                    </div>
                    <div class="form-group" style="padding:15px 0px 0px 0px">
                        <input type="checkbox" id="Likes" name="Likes" checked>
                        <label style="font-size:16px; font-weight:500; padding-right:10px" for="likes">Likes</label>

                        <input type="checkbox" id="Comments" name="Comments" checked>
                        <label style="font-size:16px; font-weight:500" for="comments">Comments</label>
                    </div>

                    
                    <button class="btn btn-lg btn-outline-dark" style="width:80px; height:29px; font-weight:500;  margin-top:15px" type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>