@model Unitial.Data.Models.ApplicationUser

<div class="cardbox shadow-lg bg-white " style="height:auto; border-radius:12px">
    <div class="cardbox-heading">

        <div class="media m-4 pt-3">
            <div class="d-flex mr-0">
                <a href="/Message?receiverId=@Model.Id" style="padding-bottom:10px">
                    <img class="img-fluid rounded-circle" src="@Model.ImageUrl" alt="User">
                </a>
            </div>
            <div class="media-body">
                <a href="/Message?receiverId=@Model.Id">
                    <p class="m-0">@Model.FirstName @Model.LastName</p>
                </a>

                <small>
                    <span>
                        <i class="icon ion-md-time"></i> @Model.CreatedOn.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </small>
            </div>
        </div>
    </div>
</div>
