@model Unitial.Web.ViewModels.Search.SearchViewModel
@{
    ViewData["Title"] = "Search";
}
<div class="main main-raised ">
    <div class="profile-content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 ml-auto mr-auto">
                    <div class="profile">
                        <div class="profile">
                            <div class="avatar">
                                <img width="200" height="200" style="width:40%; height:100%; margin-top:-100px; margin-left:169px; border-radius:50%;box-shadow: 0 4px 20px 0 rgba(0,0,0,.14), 0 7px 10px -5px rgb(0, 0, 0); " src="~/images/Search.png"
                                     alt="Circle Image" class=" centered-and-cropped">
                            </div>


                            <form method="get">
                                <div class="row form-group">
                                    <button id="ApplyTextSearchButton" class="comment-btn" style="top: 47px;margin-left: 333px">
                                        Search
                                    </button>
                                    <div class="cardbox-comments" style="margin-left:29px">
                                        <div class="search">
                                            <input asp-for="@Model.Text" placeholder="Enter user name" class="commentInput form-control" id="TextSearchInput" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                            @if (Model.Users.Count() > 0)
                            {
                                <div style="padding-left:14px; padding-bottom:60px;">
                                    @foreach (var item in Model.Users)
                                    {
                                        <div class="cardbox shadow-lg bg-white " style="height:auto; border-radius:12px">
                                            <div class="cardbox-heading">

                                                <div class="media m-4 pt-3">
                                                    <div class="d-flex mr-0">
                                                        <a href="/User/Profile?uesrId=@item.Id" style="padding-bottom:10px">
                                                            <img class="img-fluid rounded-circle" src="@item.ImageUrl" alt="User">
                                                        </a>
                                                    </div>
                                                    <div class="media-body">
                                                        <a href="/User/Profile?uesrId=@item.Id">
                                                            <p class="m-0">@item.FirstName @item.LastName</p>
                                                        </a>

                                                        <small>
                                                            <span>
                                                                <i class="icon ion-md-time"></i>
                                                                @if (item.Description != "There is no description yet. Click edit to customize your profile.")
                                                                {
                                                                    @if (item.Description.Length >= 30)
                                                                    {
                                                                        @item.Description.Substring(0, 27) <text>...</text>
                                                                    }
                                                                    else
                                                                    {
                                                                        @item.Description;
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    
                                                                    @item.Birthday.ToString("dd/MM/yyyy")
                                                                    
                                                                }
                                                            </span>
                                                        </small>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                    
                                </div>
                            }
                            else
                            {
                                <p class="NoResolt">No results found.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

